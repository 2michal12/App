<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.michal.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.USB_PERMISSION" />

    <uses-feature android:name="android.hardware.usb.host" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Segmentation" />
        <activity
            android:name=".Preview"
            android:label="@string/title_activity_load_image"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Normalisation"
            android:label="@string/title_activity_normalisation"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".filtering"
            android:label="@string/title_activity_filtering"
            android:theme="@style/AppTheme" />

        <activity android:name=".Filtering" />
        <activity android:name=".Binarisation" />
        <activity android:name=".Thinning" />

        <activity
            android:name=".ftrScan.FtrScanDemoUsbHostActivity"
            android:label="FtrScanDemoUsbHostActivity" />

        <activity
            android:name=".ftrScan.SelectFileFormatActivity"
            android:label="SelectFileFormatActivity" />


    </application>

</manifest>
