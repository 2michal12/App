<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dip" />
            <gradient
                android:startColor="@color/button_disabled"
                android:centerColor="@color/button_disabled"
                android:endColor="@color/button_disabled"
                />
            <stroke android:color="@color/black50" android:width="1dp" />

        </shape>
    </item>


    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="4dip" />
                <gradient
                    android:startColor="@color/button_color_medium"
                    android:endColor="@color/button_color_medium" />
            </shape>
        </clip>
    </item>

</layer-list>