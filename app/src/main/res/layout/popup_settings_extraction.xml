<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/popUpSettingTextTitle"
        style="@style/PopUpTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extraction_settings_title"
        android:gravity="center"
        android:padding="16dp" />

    <LinearLayout
        android:id="@+id/popup_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popUpSettingTextTitle"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <RadioGroup
            android:id="@+id/radioButtonGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ending"
                android:checked="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/minutie_ending" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/bifurcation"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/minutie_bifurcation" />

        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/popUpOK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_settings"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="@string/ok" />

</RelativeLayout>